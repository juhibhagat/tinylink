{
  "name": "tinylink-express",
  "version": "1.0.0",
  "description": "URL shortener with Node.js + Express + Tailwind",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build-css": "tailwindcss -i ./input.css -o ./public/css/output.css",
    "watch-css": "tailwindcss -i ./input.css -o ./public/css/output.css --watch"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "tailwindcss": "^3.4.18"
  }
}
