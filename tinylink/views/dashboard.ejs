<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TinyLink - Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold text-gray-800 mb-8">TinyLink Dashboard</h1>

        <!-- Add Link Form -->
        <div class="bg-white p-6 rounded-lg shadow-md mb-8">
            <h2 class="text-xl font-semibold mb-4">Create Short Link</h2>
            <form id="addLinkForm" class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700">Original URL *</label>
                    <input type="url" name="original_url" required
                        class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                        placeholder="https://example.com">
                    <p class="text-xs text-gray-500 mt-1">Must be a valid http or https URL</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">Custom Code (optional)</label>
                    <input type="text" name="code" pattern="[A-Za-z0-9]{6,8}"
                        class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                        title="6-8 characters, letters and numbers only" placeholder="myLink123">
                    <p class="text-xs text-gray-500 mt-1">6-8 characters, letters and numbers only</p>
                </div>
                <button type="submit"
                    class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition duration-200">
                    Create Short Link
                </button>
            </form>
        </div>

        <!-- Links Table -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Short
                            Code</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Target URL</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Clicks</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Last
                            Clicked</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <% links.forEach(link=> { %>
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <a href="/code/<%= link.code %>" class="text-blue-600 hover:text-blue-900 font-mono">
                                    <%= link.code %>
                                </a>
                            </td>
                            <td class="px-6 py-4">
                                <div class="text-sm text-gray-900 truncate max-w-xs">
                                    <%= link.original_url %>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                <%= link.clicks || 0 %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                <%= link.last_clicked ? new Date(link.last_clicked).toLocaleString() : 'Never' %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                <button onclick="deleteLink('<%= link.code %>')"
                                    class="text-red-600 hover:text-red-900 ml-4">Delete</button>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        // Form submission for adding new link
        document.getElementById('addLinkForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData);

            try {
                const response = await fetch('/api/links', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                if (response.ok) {
                    window.location.reload();
                } else {
                    const error = await response.json();
                    alert(error.error || 'Error creating link');
                }
            } catch (err) {
                alert('Error creating link');
            }
        });

        // Delete link function
        async function deleteLink(code) {
            if (!confirm('Are you sure you want to delete this link?')) return;

            try {
                const response = await fetch(`/api/links/${code}`, { method: 'DELETE' });

                if (response.ok) {
                    window.location.reload();
                } else {
                    alert('Error deleting link');
                }
            } catch (err) {
                alert('Error deleting link');
            }
        }
    </script>
</body>

</html>